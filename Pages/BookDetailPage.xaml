<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitapTakipMauii.Pages.BookDetailPage"
             Title="Kitap Detayı"
             BackgroundColor="#F5F5F5">
    <ScrollView Padding="15">
        <Grid RowSpacing="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Kitap Kapağı -->
            <Frame Grid.Row="0"
                   Padding="5"
                   CornerRadius="10"
                   HasShadow="True"
                   BackgroundColor="White"
                   HorizontalOptions="Center">
                <Image Source="{Binding Book.CoverImage}"
                       HeightRequest="250"
                       Aspect="AspectFill"
                       WidthRequest="150" />
            </Frame>

            <!-- Kitap Başlığı -->
            <Label Grid.Row="1"
                   Text="{Binding Book.Title}"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#333333"
                   HorizontalOptions="Center"
                   LineBreakMode="WordWrap" />

            <!-- Yazar -->
            <Label Grid.Row="2"
                   Text="{Binding Book.Author}"
                   FontSize="18"
                   TextColor="#666666"
                   HorizontalOptions="Center" />

            <!-- Sayfa Sayısı -->
            <Label Grid.Row="3"
                   Text="{Binding Book.PageCount, StringFormat='Sayfa Sayısı: {0}'}"
                   FontSize="18"
                   TextColor="#666666"
                   HorizontalOptions="Center" />

            <!-- Eklenme Tarihi -->
            <Label Grid.Row="4"
                   Text="{Binding Book.CreatedDate, StringFormat='Eklenme Tarihi: {0:dd/MM/yyyy HH\\:mm}'}"
                   FontSize="18"
                   TextColor="#666666"
                   HorizontalOptions="Center" />

            <!-- Açıklama ve Kitabı Oku Butonu/Okunmakta Yazısı -->
            <Frame Grid.Row="5"
                   Padding="10"
                   CornerRadius="5"
                   BackgroundColor="White"
                   HasShadow="False">
                <StackLayout Spacing="10">
                    <Button Text="Kitabı Oku"
                            Command="{Binding ReadBookCommand}"
                            BackgroundColor="{StaticResource PrimaryColor}"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HorizontalOptions="Center"
                            IsVisible="{Binding Book.IsReading, Converter={StaticResource InverseBooleanConverter}}" />
                    <Label Text="Kitap Okunmakta"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{StaticResource PrimaryColor}"
                           HorizontalOptions="Center"
                           IsVisible="{Binding Book.IsReading}" />
                    <Label Text="Açıklama"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#333333" />
                    <Label Text="{Binding Book.Description}"
                           FontSize="14"
                           TextColor="#666666"
                           LineBreakMode="WordWrap"
                           MaxLines="10" />
                </StackLayout>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>